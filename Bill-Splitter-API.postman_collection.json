    {
      "name": "Bills",
      "item": [
        {
          "name": "Create Bill (Equal Split)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"billName\": \"Team Dinner\",\n  \"totalAmount\": 150.00,\n  \"currency\": \"USD\",\n  \"participants\": [\n    { \"name\": \"Alice\", \"email\": \"alice@example.com\" },\n    { \"name\": \"Bob\", \"email\": \"bob@example.com\" },\n    { \"name\": \"Charlie\", \"email\": \"charlie@example.com\" }\n  ],\n  \"splitMethod\": \"equal\",\n  \"notes\": \"Pizza and drinks\",\n  \"createdByName\": \"Alice\",\n  \"createdByEmail\": \"alice@example.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/bills",
              "host": ["{{baseUrl}}"],
              "path": ["api", "bills"]
            }
          }
        },
        {
          "name": "Create Bill (Percentage Split)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"billName\": \"Project Expenses\",\n  \"totalAmount\": 1000.00,\n  \"currency\": \"USD\",\n  \"participants\": [\n    { \"name\": \"Alice\", \"email\": \"alice@example.com\" },\n    { \"name\": \"Bob\", \"email\": \"bob@example.com\" },\n    { \"name\": \"Charlie\", \"email\": \"charlie@example.com\" }\n  ],\n  \"splitMethod\": \"percentage\",\n  \"customSplits\": [\n    { \"participantEmail\": \"alice@example.com\", \"percentage\": 40 },\n    { \"participantEmail\": \"bob@example.com\", \"percentage\": 35 },\n    { \"participantEmail\": \"charlie@example.com\", \"percentage\": 25 }\n  ],\n  \"notes\": \"Based on contribution\",\n  \"createdByName\": \"Alice\",\n  \"createdByEmail\": \"alice@example.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/bills",
              "host": ["{{baseUrl}}"],
              "path": ["api", "bills"]
            }
          }
        },
        {
          "name": "Create Bill (Item-Based Split)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"billName\": \"Restaurant Bill\",\n  \"totalAmount\": 100.00,\n  \"currency\": \"USD\",\n  \"participants\": [\n    { \"name\": \"Alice\", \"email\": \"alice@example.com\" },\n    { \"name\": \"Bob\", \"email\": \"bob@example.com\" },\n    { \"name\": \"Charlie\", \"email\": \"charlie@example.com\" }\n  ],\n  \"splitMethod\": \"itemBased\",\n  \"items\": [\n    {\n      \"description\": \"Pizza\",\n      \"amount\": 30,\n      \"paidBy\": \"alice@example.com\",\n      \"splitBetween\": [\"alice@example.com\", \"bob@example.com\"]\n    },\n    {\n      \"description\": \"Pasta\",\n      \"amount\": 25,\n      \"paidBy\": \"bob@example.com\",\n      \"splitBetween\": [\"bob@example.com\", \"charlie@example.com\"]\n    },\n    {\n      \"description\": \"Drinks\",\n      \"amount\": 45,\n      \"paidBy\": \"charlie@example.com\",\n      \"splitBetween\": [\"alice@example.com\", \"bob@example.com\", \"charlie@example.com\"]\n    }\n  ],\n  \"notes\": \"Itemized dinner\",\n  \"createdByName\": \"Alice\",\n  \"createdByEmail\": \"alice@example.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/bills",
              "host": ["{{baseUrl}}"],
              "path": ["api", "bills"]
            }
          }
        },
        {
          "name": "Get Bill by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/bills/:billId",
              "host": ["{{baseUrl}}"],
              "path": ["api", "bills", ":billId"],
              "variable": [
                {
                  "key": "billId",
                  "value": "your-bill-id-here"
                }
              ]
            }
          }
        },
